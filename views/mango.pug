extends layout

block content
  h1= title
  - var items= results
  div(class="container-fluid")
  div(class="row")
   each i,index  in items
    div(class="col-sm-2" onclick=`buy(${index})`)
                p Mango_Type:  #{i.mango_type} 
                p Mango_Quantity: #{i.mango_quantity}
                p Mango_Price: #{i.Mango_Price}
    script.
        function buy(a)
        {
            alert(`You purchased Item ${a+1}`)
        }